<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/margin_16dp"
    android:layout_marginRight="@dimen/margin_16dp">

    <com.koekoetech.sayarma.custom_control.MyanHtmlTextView
        android:id="@+id/txtContentDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="What is mobile phone?"
        android:textSize="@dimen/txt_size_normal"
        android:lineSpacingExtra="@dimen/margin_4dp"
        android:textColor="@color/colorPrimaryText"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="@dimen/margin_16dp"/>

    <ImageView
        android:id="@+id/imgContentDetails"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height"
        android:src="@drawable/article_placeholder"
        android:layout_marginTop="@dimen/margin_16dp"
        android:scaleType="fitXY"/>

</LinearLayout>